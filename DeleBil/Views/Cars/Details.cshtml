@using DeleBil.Models;
@model DeleBil.Models.CarDto

@{
    ViewBag.Title = "Details";
}

<h2>Detaljer for bil</h2>

<hr />

<div class="row">
    <div class="col-xs-12 col-md-6">
        <div class="details">
            <div class="form-group">
                <label>
                    @Html.DisplayNameFor(model => model.OwnerUserName):
                </label>
                @Html.DisplayFor(model => model.OwnerUserName)
            </div>
            <div class="form-group">
                <label>
                    @Html.DisplayNameFor(model => model.LicensePlate):
                </label>
                @Html.DisplayFor(model => model.LicensePlate)
            </div>
            <div class="form-group">
                <label>
                    @Html.DisplayNameFor(model => model.Title):
                </label>
                @Html.DisplayFor(model => model.Title)
            </div>
        </div>
    </div>
    <img src="@Model.Picture" class="col-xs-12 col-md-6" />
</div>
<div class="row">
    <div class="col-xs-12">
        @if (Model.OwnerUserName == User.Identity.Name && (Model.Status == LeaseStatus.Available || Model.Status == LeaseStatus.Verified))
        {
            <hr />
            @Html.ActionLink("Rediger", "Edit", new { id = Model.Id }, new { @class = "btn btn-default col-xs-12" })
        }
        @if (Model.OwnerUserName == User.Identity.Name && Model.Status == LeaseStatus.Verified)
        {
            <br /><br />
            @Html.ActionLink("Slett bil", "DeleteCar", "Home", new { id = Model.Id }, new { @class = "btn btn-danger col-xs-12", onclick = "return confirm('Er du sikker på at du vil slette bilen?');" })
        }
    </div>
</div>
