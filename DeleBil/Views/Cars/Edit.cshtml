@model DeleBil.Models.Car

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm("Edit", "Cars", null, FormMethod.Post, new { role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="col-xs-12">
        <h4>Rediger detaljer for bil med skiltnummer: <strong>@Html.DisplayFor(model => model.LicensePlate)</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.LicensePlate)
            @Html.EditorFor(model => model.LicensePlate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LicensePlate, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Title)
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("Bilde")
            <input type="file" id="file" name="file" />
        </div>

        <div class="form-group">
            <input type="submit" value="Lagre" class="btn btn-primary pull-right col-xs-12 col-md-3" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

